#send "T\n"
#send " -1\n"
#expect -re "7ffff_000 +007ef_000 +1 +1 +1 +1"  {} timeout {exit 1}

expect ">>"
send "R\n"
expect -re "t1.+0x00000001"  {} timeout {exit 1}

expect ">>"
send "Q\n"
